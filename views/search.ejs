<!DOCTYPE html>
<html>
  <head>
     <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/water.css@2/out/dark.css">
    <%- include('partials/metatags.ejs') %>
  </head>
  <body>
     <h3>
      <a href="/">WaterTube</a>
    </h3>
    <h1>
      Results for: <%= query %>
    </h1>
   <%- include('partials/searchbar.ejs', {query:query || ""}) %>
    <% var i = 0; while(i < data.length){ %>
    <h4>
     
      <a href="/watch/<%= data[i].id %>"><%= data[i].title %></a>
    </h4>
    <p>
     <% if (data[i].type !== "channel") { %> <%= data[i].description %> &bull; <%= data[i].uploadedAt %> &bull; Uploaded by <%= data[i].author.name %><% } %>
    </p>
    <% i++; } %>
  </body>
</html>